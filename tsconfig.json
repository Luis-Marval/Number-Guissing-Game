{
  "compilerOptions": {
    "strict": true,         
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"]
    },
    "outDir": "dist",
    "rootDir": "src",
  }
}
